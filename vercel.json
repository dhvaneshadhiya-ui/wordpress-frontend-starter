{
  "buildCommand": "vite build && node scripts/build-static.js && node scripts/generate-seo-files.js",
  "outputDirectory": "dist",
  "framework": null,
  "installCommand": "npm install",
  "images": {
    "domains": ["dev.igeeksblog.com", "igeeksblog.com", "secure.gravatar.com"],
    "formats": ["image/avif", "image/webp"],
    "minimumCacheTTL": 86400,
    "sizes": [320, 480, 640, 768, 1024, 1280, 1536, 1920]
  },
  "functions": {
    "api/wp/[...path].js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/wp/:path*", "destination": "/api/wp/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
